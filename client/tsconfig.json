{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "paths": {
      "@/*": [
        "./*"
      ]
    },
    "types": [
      "nativewind/types"
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "client/.expo/types/**/*.ts",
    "client/expo-env.d.ts",
    "client/app/_layout.tsx",
    "client/components/login.js",
    ".expo/types/**/*.ts",
    "expo-env.d.ts"
  ]
}
